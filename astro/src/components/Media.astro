---
import Image from "@components/Image.astro";
import Video from "@components/Video.astro";
import type { Media } from "../types";

interface Props {
  media: Media;
  class?: string;
}

const { class: className, media } = Astro.props;
---

{
  media.type === "image"
    ? media.image && <Image image={media.image} class:list={className} />
    : media.video && <Video video={media.video} class:list={className} />
}
